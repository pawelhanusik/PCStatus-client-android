<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/prefs_server_header">

        <EditTextPreference
            app:key="server_url"
            app:title="@string/prefs_server_url_title"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="5"
            app:key="update_refresh_interval"
            app:title="@string/prefs_update_refresh_interval"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>